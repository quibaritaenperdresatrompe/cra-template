{
  "name": "cra-template",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "analyze": "source-map-explorer 'build/static/js/*.js'",
    "build": "react-scripts build",
    "commit": "git-cz",
    "coverage": "live-server ./coverage/lcov-report/ --open",
    "format": "prettier --write '{*,src/*,public/*}.{html,js,jsx,json,md}'",
    "lint": "eslint --cache .",
    "start": "react-scripts start",
    "test": "react-scripts test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{html,js,jsx,json,md}": "prettier --write",
    "package.json": "sort-package-json",
    "yarn.lock": "yarn-deduplicate"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "prettier": "@qbaepst/prettier-config",
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "eslintIgnore": [
    "build"
  ],
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/index.{js,jsx}",
      "!**/node_modules/**",
      "!src/**/*.stories.js"
    ],
    "coverageReporters": [
      "lcov",
      "text-summary"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 80,
        "branches": 80,
        "functions": 80,
        "lines": 80
      }
    }
  },
  "dependencies": {
    "axios": "^0.21.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-query": "^2.26.2",
    "web-vitals": "^0.2.4"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^11.0.0",
    "@qbaepst/prettier-config": "^1.3.0",
    "@testing-library/dom": "^7.26.5",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "commitlint": "^11.0.0",
    "git-cz": "^4.7.1",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.1",
    "live-server": "^1.2.1",
    "prettier": "^2.1.2",
    "react-scripts": "4.0.0",
    "sort-package-json": "^1.46.1",
    "source-map-explorer": "^2.5.0",
    "typescript": "^4.0.5",
    "yarn-deduplicate": "^3.1.0"
  }
}
